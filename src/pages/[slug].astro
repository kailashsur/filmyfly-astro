---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import MovieCard from '../components/MovieCard.astro';

import { getMovieBySlug } from '../lib/api';
import { generateMovieSEO } from '../lib/seo';

export const prerender = false; // ðŸ”¥ KEY LINE

const { slug } = Astro.params;
const movie = await getMovieBySlug(slug);

if (!movie) {
  return new Response('Not Found', { status: 404 });
}
---

<BaseLayout seo={seo} settings={settings}>
  <Header />

  <div align="center">
    <h2>{movie.title}</h2>
  </div>

  <div align="center">
    <img src={movie.thumbnail} width="280" loading="lazy" />
  </div>

  <!-- rest of your HTML stays SAME -->

  <Footer />
</BaseLayout>
